style.
	#radioBtn .notActive{
		color: #3276b1;
		background-color: #fff;
	}

.row
	hr.divider
	h4 switches


	mixin switch(name,value)
		.input-group(style="margin-left:10px;")
			.btn-group(id="radioBtn")
				if value=="show"
					a.btn.btn-primary.btn-xs.notActive(data-toggle=name data-title="off") off
					a.btn.btn-primary.btn-xs.active(data-toggle=name data-title="show") show
					a.btn.btn-primary.btn-xs.notActive(data-toggle=name data-title="hide") hide
				else if value=="hide"
					a.btn.btn-primary.btn-xs.notActive(data-toggle=name data-title="off") off
					a.btn.btn-primary.btn-xs.notActive(data-toggle=name data-title="show") show
					a.btn.btn-primary.btn-xs.active(data-toggle=name data-title="hide") hide
				else
					a.btn.btn-primary.btn-xs.active(data-toggle=name data-title="off") off
					a.btn.btn-primary.btn-xs.notActive(data-toggle=name data-title="show") show
					a.btn.btn-primary.btn-xs.notActive(data-toggle=name data-title="hide") hide
			input(type="hidden" name=name id="_input_"+name)
			span(style="margin-left:5px; font-size:16px; font-weight:bold")=name



	// nice mixins :-)
	+switch('initiatives',board.viewConfig.initiatives)
	+switch('Swag',board.viewConfig.swag)
	+switch('Start',board.viewConfig.start)
	+switch('queues',board.viewConfig.queues)
	+switch('grid',board.viewConfig.grid)
	+switch('vision',board.viewConfig.vision)
	+switch('targets',board.viewConfig.targets)
	+switch('lanes',board.viewConfig.lanes)
	+switch('axes',board.viewConfig.axes)
	hr.divider
	+switch('queues.qmetrics',"off")
	+switch('metrics',board.viewConfig.metrics)
	+switch('releases',"off")
	+switch('NGR',"off")
	



	script.
		$('#radioBtn a').on('click', function(){
			var sel = $(this).data('title');
			var tog = $(this).data('toggle');
			$('#'+tog).prop('value', sel);
			$('a[data-toggle="'+tog+'"]').not('[data-title="'+sel+'"]').removeClass('active').addClass('notActive');
			$('a[data-toggle="'+tog+'"][data-title="'+sel+'"]').removeClass('notActive').addClass('active');
			console.log("* clicked..." +tog+" selected: "+sel);
			
			if(tog=="Swag"){
				if (sel=="show") showSwag();
				if (sel=="hide") hideSwag();
			}
			else if(tog=="Start"){
				if (sel=="show") showStart();
				if (sel=="hide") hideStart();
			}

			else{
				if (sel=="show") show("#"+tog);
				if (sel=="hide") hide("#"+tog);
			}
	
		})


		function hide(group){
			//d3.select(group).style("visibility","hidden");
			d3.select(group).transition().duration(500).style("opacity",0);
			console.log("++++++++: "+group);
		}

		function show(group){
			//d3.select(group).style("visibility","visible");
			d3.select(group).transition().duration(500).style("opacity",1);
			//d3.select(group).transition().duration(500).style("opacity","");
			console.log("++++++++: "+group);
		}

		function hideStart(){
			d3.selectAll("[id*=startID]").style("visibility","hidden")
		}

		function showStart(){
			d3.selectAll("[id*=startID]").style("visibility","visible")
		}

		function hideSwag(){
			d3.selectAll("#initiatives,#queues,#metrics")
				.style("visibility","visible");
			d3.selectAll("#sizings,#labels")
				.transition()
				.delay(0)
				.duration(1000)
				.style("opacity",0);
			d3.selectAll("#initiatives,#queues,#lanes,#axes,#metrics")
				.transition()
				.delay(0)
				.duration(1000)
				.style("opacity",1);

		}
		function showSwag(){
			d3.selectAll("#sizings,#labels")
			.transition()
			.delay(0)
			.duration(1000)
			.style("opacity",1);
			d3.selectAll("#initiatives,#queues,#metrics")
			.transition()
			.delay(0)
			.duration(1000)
			.style("opacity",0);

			d3.selectAll("#initiatives,#queues,#metrics")
			.transition()
			.delay(1000)
			.style("visibility","hidden");

			d3.selectAll("#lanes,#axes")
			.transition()
			.duration(1000)
			.style("opacity",0.5);
		}
