include ../kanban_menu

script(src="/javascripts/kanban/kanban_config.js")
script(src="/javascripts/organization/org_util.js")

style.
	.node circle {
		fill: #fff;
		stroke: steelblue;
		stroke-width: 3px;
	}

	.node text { font: 8px sans-serif; }

	.link {
		fill: none;
		stroke: #ccc;
		stroke-width: 2px;
	}


block content
	div.notifications.top-left
	div.panel(style=" position: relative;padding: 20px 40px 40px;display: block;background-color:white;width:1200px;text-align: left;margin: 10px auto;")
		.panel-heading
			i.glyphicon.glyphicon-book(style="font-size:15px")
			span(style="font-size:20px")&nbsp; #{collection.toUpperCase()} 
			if orgdate
				span(style="font-size:20px")&nbsp; #{orgdate.toUpperCase()} 
			span(style="font-size:20px")&nbsp; - TREE VERTICAL 
			if baseRoot
				div(style="font-size:20px") #{baseRoot["Employee Number"]} - #{baseRoot["First Name"]} #{baseRoot["Last Name"]} 
			div(id="stats" style="font-size:10px")
		.panel-body
			div(id="d3container")

	script(type="text/javascript").
		var date = '#{orgdate}'
		var baseRoot = JSON.parse('!{JSON.stringify(baseRoot)}');

	script(src="/javascripts/organization/org_tree_vertical.js")
	
