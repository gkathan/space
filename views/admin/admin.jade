				span  save selected
				
			button.btn.btn-danger.btn-xs(id="bremove" type="button" data-toggle="tooltip" data-placement="top" title="Tooltip on top")
				span.glyphicon.glyphicon-trash 
				span  remove selected
				
			a.btn.btn-info.btn-xs(id="lexcel")
				span.glyphicon.glyphicon-export 
				span  export excel
		div(id="adminGrid")
		div(id="pager" style="height:20px")
		div(id="error" style="height:50px;color:red;font-size:10px")

