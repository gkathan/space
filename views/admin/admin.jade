include admin_imports

block content
	div(style="margin-left:20px")
		
		span(style="font-family:arial;font-weight:normal;font-size:32px;color:lightgrey") admin :: 
		span(id="admintype" style="font-family:arial;font-weight:bold;font-size:32px;color:lightgrey")
		span(style="font-size:32px")
			span(style="font-family:arial;font-weight:bold;color:lightgrey") . 
			span(id="countitems" style="font-family:arial;font-weight:bold;color:lightgrey")
			span(style="font-family:arial;font-weight:normal;color:lightgrey") &nbsp;items
