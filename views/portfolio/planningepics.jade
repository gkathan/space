include ../kanban_menu

//link(rel='stylesheet', href='/stylesheets/tables.css')

- function getHealthColor(status){
-		if (!status) status="Undefined";
-			return config.initiatives.health.colors[status];
- }


block content
	div.panel(style=" position: relative;padding: 20px 40px 40px;display: block;background-color:white;;width:1600px;text-align: center;margin: 10px auto;")
		.panel-heading
			h3.panel-title(style="font-size:24px;font-weight:bold") Planning Epics per Initiatives Overview
			br
			a(href="/portfolio/planningbacklogs") view planning backlogs
			br
			if planningEpicsBoardId
				a(style="font-size:11px" href="/boards/kanban/#{planningEpicsBoardId}") timeline board - initiatives planningepics(*experimental) 
				br
			if roadmapBoardId
				a(style="font-size:11px" href="/boards/kanban/#{roadmapBoardId}") roadmap board - initiatives - clustered by status|product(*experimental) 
				br

			table(style="text-align:right;font-size:12px")
				tr
					td(style="text-align:left")
						|total initiatives: 
					td
						b
							|#{initiatives.length}
					td(style="text-align:left")
						|&nbsp;(Understanding: #{grouped.Understanding.length} Conception: #{grouped.Conception.length} Implementation: #{grouped.Implementation.length})
				tr
					td(style="text-align:left")
						|total planning epics: 
					td
						b
							|#{statistics.totalPlanningEpics}
						
				tr
					td(style="text-align:left;width:150px")
						|total swag remaining: 
					td
						b
							|#{Math.round(statistics.totalSwagRemaining)} 
					td(style="text-align:left")
						//|(average: #{statistics.averageSwag.toFixed(2)})
				tr
					td(style="text-align:left;width:150px")
						|overall progess: 
					td(style="font-size:16px")
						b
							|#{Math.round((statistics.totalSwagRemaining/statistics.totalSwag)*100)}% 
			
			
		.panel-body
		table.table.table-striped.table-hover.table-condensed.table-responsive.tablsesorter(id="planningepics" style="max-width:1600px")
			thead
				tr(style="font-size:12px")
					th(style="width:2px") h
					th(style="width:70px") id
					th(style="max-width:100px") initiative
					th(style="max-width:80px") status
					th(style="max-width:40px;text-align:right") value
					th(style="max-width:40px;text-align:right") risk
					th(style="text-align:right;width:50px") swag initiative PD
					th(style="text-align:right;width:50px") progress initiative %
					th(style="text-align:right;center:50px") prog%
					th(style="text-align:right;width:50px") swag remaining
					th(style="text-align:right;width:50px") size

					th(style="width:750px") planning epics
					
			tbody
				each i in initiatives
					tr(style="background-color:#{_color}")
						//td(style="border-left: solid 3px "+getStatusColor(i.Status))
						td(title="#{i.HealthComment}" style="font-size:0px;background-color:"+getHealthColor(i.Health))
							|#{_.first(i.Health)}
						td(style="vertical-align:top;font-size:11px;;text-align:left;font-weight:normal;vertical-align:top") 
							a(href="http://v1.bwinparty.corp/V1-Production/Epic.mvc/Summary?oidToken=Epic%3A"+i.ID.split(":")[1] target="_new" title="see epic in V1")
								|#{i.Number} #{i.IsInLatestApprovedPortfolio} 
						td(style="vertical-align:top;font-size:11px;;text-align:left;font-weight:normal;vertical-align:top") 
							b
								a(href="http://v1.bwinparty.corp/V1-Production/Epic.mvc/Summary?oidToken=Epic%3A"+i.ID.split(":")[1] target="_new" title="#{i.ElevatorPitch}")
									|#{i.Name} 
						td(style="vertical-align:top;font-size:11px;;text-align:left;font-weight:normal;vertical-align:top") 
							|#{i.Status} 
						
						td(style="vertical-align:top;font-size:11px;;text-align:right;font-weight:normal;vertical-align:top" title="Value: #{i.Value}") #{i.Value}
						td(style="vertical-align:top;font-size:11px;;text-align:right;font-weight:normal;vertical-align:top" title="Risk: #{i.Risk}")  #{i.Risk}
						td(style="vertical-align:top;font-size:11px;;text-align:right;font-weight:normal;vertical-align:top" title="Swag from Initiative: #{i.Swag} PD") #{i.Swag}			
						td(style="vertical-align:top;font-size:11px;;text-align:right;font-weight:normal;vertical-align:top" title="Progress from Initiative: #{i.Progress}%") #{i.Progress}			
						td(style="vertical-align:top;text-align:right;font-size:11px;vertical-align:top" title="Progress aggregated for underlying Planning Epics: #{i.ProgressPlanned}%") 
							if i.Progress
								b
									|#{Math.round(i.ProgressPlanned)}
							else 
								|-
						td(style="vertical-align:top;font-size:11px;;text-align:right;font-weight:normal;vertical-align:top"  title="Swag aggregated from underlying planning epics: #{i.SwagPlanned} PD") 
							if i.Progress
								|#{Math.round(i.SwagPlanned*((100-i.ProgressPlanned)/100))}
							else 
								|#{i.SwagPlanned}
						td(style="vertical-align:top;font-size:11px;;text-align:right;font-weight:normal;vertical-align:top" title="Swag aggregated from underlying planning epics: #{i.SwagPlanned} PD") #{i.SwagPlanned}								
						td(style="vertical-align:top;text-align:left;font-size:10px;vertical-align:top")
							if i.PlanningEpics.length>0
								table.table-responsive.table-stripe
									- var _sum = 0; 
									each p in i.PlanningEpics
										- _sum+=p.Swag
										tr
											td(style="width:10px;vertical-align:top")
												|+ 
											td(style="vertical-align:top;text-align:left;font-size:10px;vertical-align:top;width:40px") 
												a(href="http://v1.bwinparty.corp/V1-Production/Epic.mvc/Summary?oidToken=Epic%3A"+p.ID.split(":")[1] target="_new")
													|#{p.Number} 
											td(style="vertical-align:top;text-align:left;font-size:10px;vertical-align:top;width:200px")
												a(href="http://v1.bwinparty.corp/V1-Production/Epic.mvc/Scorecard?oidToken=Epic%3A"+p.ID.split(":")[1] target="_new" title="go to V1 Scorecard") 
													|#{p.Name}
											td(style="vertical-align:top;text-align:center;font-size:10px;vertical-align:top;width:30px") #{p.CategoryName}
											td(style="vertical-align:top;text-align:center;font-size:10px;vertical-align:top;width:30px") #{p.Swag}
											
											td(style="vertical-align:top;text-align:center;font-size:10px;vertical-align:top;width:30px") #{Math.round(p.Progress)}%
											td(style="vertical-align:top;text-align:center;font-size:10px;vertical-align:top;width:30px") 
												if p.Progress
													|#{Math.round(p.Swag*((100-p.Progress)/100))}
												else
													|#{p.Swag}
											td(style="vertical-align:top;text-align:center;font-size:10px;vertical-align:top;width:70px")
												if p.PlannedStart
													|#{moment(p.PlannedStart).format('YYYY-MM-DD')}
												else
													|-
											td(style="vertical-align:top;text-align:center;font-size:10px;vertical-align:top;width:80px")
												if p.PlannedEnd
													|#{moment(p.PlannedEnd).format('YYYY-MM-DD')}
												else 
													|-
											td(style="vertical-align:top;text-align:left;font-size:10px;vertical-align:top;width:200px") 
												a(href="/portfolio/planningbacklogdetail/"+p.BusinessBacklogID title="show details")
													|#{p.BusinessBacklog}
							else		
								|-
			script $("#planningepics").tablesorter();
